<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:paddingBottom="@dimen/activity_vertical_margin"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    tools:context="com.example.dodo.myapplication.AcaoStickNote">    <ImageButton        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/imageButtonDelete"        android:src="@drawable/ic_delete_forever_black_24dp"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:onClick="deletar"/>    <ImageButton        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/imageButtonConcluir"        android:src="@drawable/ic_check_circle_black_36dp"        android:layout_marginTop="87dp"        android:layout_below="@+id/textViewTitulo"        android:layout_centerHorizontal="true"        android:onClick="concluir"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/textViewTitulo"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_alignParentRight="true"        android:layout_alignParentEnd="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/textViewNota"        android:layout_alignRight="@+id/textViewTitulo"        android:layout_alignEnd="@+id/textViewTitulo"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_below="@+id/textViewTitulo"/></RelativeLayout>